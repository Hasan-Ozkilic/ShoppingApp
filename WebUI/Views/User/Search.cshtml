@model List<Product>
@{
    ViewData["Title"] = "Search";
}

@section navbar{
    <partial name="_usernavbar" />
}


<div class="row mt-4">
    <partial name="_yanmenu" />
    <div class="col-md-9">
        @if (Model.Count == 0)
        {
            <h4 style="text-align:center; margin-top:220px;">Aranılan ürün bulunamadı</h4>
        }
        else
        {
            <div class="row mt-4">
                @foreach (var product in Model)
                {
                    <partial name="_allproduct" model="product" />
                }
            </div>
        }

    </div>
</div>
