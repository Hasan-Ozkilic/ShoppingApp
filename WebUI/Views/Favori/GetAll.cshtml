@model List<FavoriGetAllModel>
@{
    ViewData["Title"] = "GetAll";
}

@section navbar{
    <partial name="_usernavbar" />
}

<h4 style="color:white; text-align:center; font-weight:bold; background-color:red; " class="mt-2">Favorilerin</h4>

<div class="row mt-4">
    <partial name="_favoriyanmenu" />
    <div class="col-md-9">

        <partial name="_slider" />

        <div class="row mt-4">
            @if (Model.Count == 0)
            {
                <h6 style="text-align:center;">Henüz favori ürün eklemediniz.</h6>
            }
            else
            {
                @foreach (var product in Model)
                {
                    <partial name="_favori" model="product" />
                }
            }

        </div>

    </div>
</div>


