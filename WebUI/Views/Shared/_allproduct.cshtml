@model Product

<div class="col-md-4" style="width:300px;height:400px; padding-right:0px; padding-left:8px;">
    <div class="card mb-2 "  >
        <div style="text-align:center;">  <img src="~/img/@Model.ImageUrl" alt="@Model.ProductName" width="200" height="200" /></div>
     
        <div class="card-body">
            <h4 class="card-title">
                <a href="#">@Model.ProductName</a>
            </h4>
            <small class="text-muted mr-4">
                <i class="fas fa-lira-sign"></i> @Model.ProductPrice

            </small>
            <small class="text-muted" >  Stok Adedi : @Model.UnitsInStock</small>

            <a style="margin-left:28px;" asp-controller="Message" asp-action="Add" asp-route-id="@Model.UserId" class="btn btn-outline-primary btn-sm">Satıcı ile konuş</a>


        </div>
        <div class="card-footer text-center">
            <a asp-controller="Product" asp-action="Detaylar" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Detaylar</a>
            <a asp-controller="Basket" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm ml-3">Sepete Ekle</a>
          
                <a asp-controller="Favori" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-danger btn-sm ml-3">Favorilere Ekle</a>
           


        </div>
    </div>
</div>